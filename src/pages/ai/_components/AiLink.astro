---
import { ArrowUpRight } from '@phosphor-icons/react';

type Props = {
  href: string;
};

const { href } = Astro.props;
---

<a href={href}><slot /> <ArrowUpRight /></a>

<style>
  a {
    display: flex;
    align-items: center;
    gap: 2px;
    color: var(--color-accent-primary-text);
    text-underline-offset: 4px;
  }

  a > svg {
    transform: translateY(1px);
  }
</style>
