---
import { CursorClickIcon } from '@phosphor-icons/react';
import StackBuilder from '../../../components/StackBuilder/StackBuilder.astro';
import AiSectionHeader from './AiSectionHeader.astro';
---

<section class="main">
  <AiSectionHeader>
    <CursorClickIcon />
    <h2 id="stack-builder">Try Us Out</h2>
    <p>Choose from a constantly growing list of technologies to build your ideal stack. We'll take care of configuring your monorepo.</p>
  </AiSectionHeader>
  <StackBuilder />
</section>

<style lang="scss">
  @use '../../../styles/mixins';

  .main {
    display: flex;
    flex-direction: column;
    gap: 48px;
    margin: 0 auto;
    width: 100%;
    max-width: var(--max-width-page-section);

    > :global(header) {
      margin-bottom: var(--space-xl);
    }
  }
</style>
