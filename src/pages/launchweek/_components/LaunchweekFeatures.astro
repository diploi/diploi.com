---
import { Question } from '@phosphor-icons/react';
import AiSectionHeader from '../../ai/_components/AiSectionHeader.astro';
import AiHeroFeatures from '../../ai/_components/AiHeroFeatures.astro';
import AiHr from '../../ai/_components/AiHr.astro';
import AiHeroDiploiFeatures from '../../ai/_components/AiHeroDiploiFeatures.astro';
---

<section class="main">
  <AiSectionHeader>
    <Question />
    <h2>What is Diploi?</h2>
    <p>Diploi is the single SaaS service for managing, developing and hosting your full application.</p>
  </AiSectionHeader>
  <AiHeroFeatures />
  <AiHr />
  <AiHeroDiploiFeatures />
</section>

<style lang="scss">
  @use '../../../styles/mixins';

  .main {
    display: flex;
    flex-direction: column;
    gap: 48px;
    margin: 0 auto;
    width: 100%;
    max-width: var(--max-width-page-section);
  }
</style>
