---
import {
  ArrowSquareOut,
  CalendarBlank,
  FileText,
  User,
} from '@phosphor-icons/react';

type Props = {
  title: string;
  description: string;
  url: string;
  timestamp: string;
  author: string;
};

const { title, description, url, timestamp, author } = Astro.props;
---

<a target={url.includes('https://') ? '_blank' : undefined} href={url}>
  <article>
    <h3>
      {url.includes('https://') ? <ArrowSquareOut /> : <FileText />}
      {title}
    </h3>
    <p>{description}</p>
    <footer>
      <p><User /> {author}</p>
      <p>
        <CalendarBlank />
        {
          new Date(timestamp).toLocaleDateString('en-US', {
            month: 'long',
            day: 'numeric',
            year: 'numeric',
          })
        }
      </p>
    </footer>
  </article>
</a>

<style>
  a {
    margin-bottom: 48px;
    text-decoration: none;
    color: white;
  }

  h3 {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 0;

    svg {
      opacity: 0.7;
    }
  }

  footer {
    display: flex;
    align-items: center;
    gap: 16px;

    p {
      display: flex;
      align-items: center;
      gap: 3px;
      margin: 0;
      font-size: 0.64rem;
    }
  }
</style>
