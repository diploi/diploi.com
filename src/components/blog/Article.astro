---
import { CalendarBlank, Link, User } from '@phosphor-icons/react';
import { Image } from 'astro:assets';

type Props = {
  id: string;
  title: string;
  description: string;
  image?: ImageMetadata | null;
  external_image?: string | null;
  url?: string;
  timestamp: string;
  author: string;
};

const { id, title, description, image, external_image, url, timestamp, author } = Astro.props;
---

<a href={`/blog/${id}`}>
  <article>
    {
      (image || external_image) && (
        <Image src={(image || external_image) as string} inferSize width={500} height={300} alt="Article image" />
      )
    }
    <h3>{title}</h3>
    <p>{description}</p>
    <footer>
      <p class="small"><User /> {author}</p>
      <p class="small">
        <CalendarBlank />
        {
          new Date(timestamp).toLocaleDateString('en-US', {
            month: 'long',
            day: 'numeric',
            year: 'numeric',
          })
        }
      </p>
      {
        url && (
          <p class="small">
            <Link /> Dev.to
          </p>
        )
      }
    </footer>
  </article>
</a>

<style lang="scss">
  @use '../../styles/mixins';

  a {
    display: block;
    width: 100%;
    max-width: 768px;
    margin: 0 auto;
    text-decoration: none;
    color: white;
  }

  article {
    @include mixins.card-desktop;
    display: flex;
    flex-direction: column;
    gap: var(--space-xl);
  }

  img {
    height: 50%;
    width: 100%;
    max-width: 100%;
    border-radius: var(--border-radius-medium);
    object-fit: cover;
  }

  h3 {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 0;

    svg {
      opacity: 0.7;
    }
  }

  footer {
    display: flex;
    align-items: center;
    gap: 16px;

    p {
      display: flex;
      align-items: center;
      gap: 3px;
    }
  }
</style>
