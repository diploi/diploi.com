---
type Props = {
  class?: string
  isLarge?: boolean
  isCardInMobile?: boolean
}

const { class: className, isLarge, isCardInMobile = false } = Astro.props
---

<article
  class:list={[
    `card-woo`,
    isLarge && 'large',
    isCardInMobile && 'is-card-in-mobile',
  ]}
>
  moi
  <slot />
</article>

<style>
  @use '../../styles/mixins';
  .card-woo {
    @include mixins.card-desktop;
  }
</style>
